<form method="post" action="/figures">
    <label for="figure_name">Figure Name:</label>
    <input type="text" name="figure[name]" id="figure_name">
    <br></br>

    <label for="titles">Figure Titles:</label>
    <% Title.all.each do |title| %>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><%=title.name%></input><br></br>
    <% end %>
    <label>Or, insert a new title:</label>
    <input type"text" name="title[name]" id="new_title">
    
    <label for="landmarks">Figure Landmarks: </label>
    <% Landmark.all.each do |landmark| %>
    <input type=checkbox id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%=landmark.name%></input><br></br>
    <% end %>
    <label>Or, insert a new landmark:</label>
    <input type="text" name ="landmark[name]" id="new_landmark">

    
    <input type="submit" id="Create New Figure">Create New Figure</input>
</form>